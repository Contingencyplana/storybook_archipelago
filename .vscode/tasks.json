{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test: repo root (pytest)",
      "type": "shell",
      "command": "pytest -q",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Test: current node (pytest)",
      "type": "shell",
      "command": "pytest -q ${fileDirname}",
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Lint: disallow [PORTAL:]",
      "type": "process",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-Command",
        "rg -n --hidden --no-messages -g '!**/.git/**' '\\[PORTAL:\\]' .; if ($LASTEXITCODE -eq 0) { Write-Error 'Found disallowed [PORTAL:] markers. Use \"[PORTAL:\" instead.'; exit 1 }"
      ],
      "group": "test",
      "problemMatcher": []
    }
  ]
}
